<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <TextView android:text="@string/team_number"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>

        <TextView android:id="@+id/view_team_number"
            android:hint="@string/team_number_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <TextView android:text="@string/team_name"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>

        <TextView android:id="@+id/view_team_name"
            android:hint="@string/team_name_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <TextView android:text="@string/team_location"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>

        <TextView android:id="@+id/view_team_location"
            android:hint="@string/team_location_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView   android:text="@string/team_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>

    <TextView   android:id="@+id/view_team_notes"
        android:hint="@string/team_notes_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>