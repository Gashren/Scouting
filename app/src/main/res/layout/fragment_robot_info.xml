<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.team2944.luke.scouting.EditTeamActivityFragment"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <TextView android:text="@string/edit_robot_name"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>

        <EditText android:id="@+id/edit_robot_name"
            android:hint="@string/edit_robot_name_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <TextView android:text="@string/edit_robot_weight"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>

        <EditText android:id="@+id/edit_robot_weight"
            android:hint="@string/edit_robot_weight_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView   android:text="@string/edit_robot_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>

    <EditText   android:id="@+id/edit_robot_notes"
        android:hint="@string/edit_robot_notes_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
